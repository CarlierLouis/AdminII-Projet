options {
        directory "/var/bind";
        listen-on { any; };
        listen-on port 53 { any; };
        listen-on-v6 { none; };

        allow-query { 172.16.0.0; };

        allow-transfer {
                none;
        };

        pid-file "/var/run/named/named.pid";

        allow-recursion { none; };
        recursion no;
};
